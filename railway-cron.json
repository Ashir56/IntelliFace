{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "cron": {
    "schedule": "*/5 * * * *",
    "command": "python manage.py capture_snapshots --verbose"
  }
}